<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:id="@+id/layout_new_good">
    <ImageView
        android:id="@+id/iv_good_thumb"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/nopic"
        />
    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/item_good_text"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"/>
    <TextView
        android:id="@+id/tv_good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$566.9"
        android:textSize="13sp"
        android:textColor="@color/item_good_price"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


</LinearLayout>